@model AdoptDevMVC.Models.UserModels.UserDisplayModel

@{
    ViewData["Title"] = "DisplayProfile";
}

<h1>DisplayProfile</h1>

<div>
    <h4>UserModel</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Phone)
        </dd>
        @foreach(var listSkill in Model.UserSkillList)
            {
                <dt class = "col-sm-2">Skill</dt>
                <dd class = "col-sm-10">@listSkill.Skill.CategoryName  : @listSkill.Skill.Name</dd>
            }
    </dl>
</div>
<div>
    @Html.ActionLink("Editer", "EditProfile", new { Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
